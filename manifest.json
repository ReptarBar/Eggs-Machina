{
  "manifest_version": 3,
  "name": "Eggs Machina",
  "version": "0.3.2",
  "description": "Sandbox Rube Goldberg builder with a prize egg goal.",
  "action": {
    "default_title": "Eggs Machina",
    "default_popup": "src/ui/popup.html"
  },
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png",
    "256": "assets/icons/icon-256.png"
  },
  "background": {
    "scripts": ["src/background/background.js"]
  },
  "options_ui": {
    "page": "src/ui/options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage"
  ]
}